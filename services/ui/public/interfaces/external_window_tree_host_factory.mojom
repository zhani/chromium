module ui.mojom;

import "services/ui/public/interfaces/window_tree_host.mojom";

// ExternalWindowTreeHostFactory triggers the creation of WindowTreeHost instances.
interface ExternalWindowTreeHostFactory {
  // Creates a new WindowTreeHost in 'external window mode'.
  // One WindowTree/WindowTreeClient pair can serve one or more WindowTreeHost
  // instances.
  CreatePlatformWindow(WindowTreeHost& window_tree_host,
                       uint64 client_id,
                       map<string, array<uint8>> properties);
};
